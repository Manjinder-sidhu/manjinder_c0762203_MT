<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Details"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Details of selected service"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected car:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="mercedes"
            android:layout_marginLeft="60dp"
            android:id="@+id/selectedcar"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of days:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="days are"
            android:layout_marginLeft="40dp"
            android:id="@+id/number_days"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="driver's Age:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="age is"
            android:layout_marginLeft="70dp"
            android:id="@+id/driver_age"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="Options : "/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="GPS"
            android:layout_marginLeft="65dp"
            android:id="@+id/option1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="child"
            android:layout_marginLeft="60dp"
            android:id="@+id/option2"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extra millage:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="extra millage"
            android:layout_marginLeft="10dp"
            android:id="@+id/option3"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount is:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="amount"
            android:layout_marginLeft="80dp"
            android:id="@+id/amount"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total payment is:"/>
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="total payment is"
            android:layout_marginLeft="40dp"
            android:id="@+id/total_payment"/>


    </LinearLayout>


</LinearLayout>